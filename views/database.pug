doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(name="description", content="The Database Schema Documentation for Shareable Paint App")
        link(rel="stylesheet", href="/css/docs.css")
        title Database Schema Documentation
    body 
        .wrapper 
            span.heading Database Schema for Shareable Paint App

            .cardsContainer 
                .card 
                    .cardHeader 
                        span.method.get USER
                        span.endPoint UserSchema.js
                    span.response Schema
                    ul  
                        li 
                            code firstName
                            span &nbsp; string - The first name of the user
                        li 
                            code lastName
                            span &nbsp; string - The last name of the user
                        li 
                            code username
                            span &nbsp; string - The username of the user
                        li 
                            code email
                            span &nbsp; string - The email of the user
                        li 
                            code password
                            span &nbsp; string - Hashed and salted password of the user
                        li 
                            code profilePic
                            span &nbsp; string - The unique URI from dicebear
                        li 
                            code paints
                            span &nbsp; ObjectIdArray - The Array of Paint Ids owned by the user
                
                .card 
                    .cardHeader 
                        span.method.put PAINT
                        span.endPoint PaintSchema.js
                    span.payload Schema 
                    ul  
                        li 
                            code title
                            span &nbsp; string - The title of the paint
                        li 
                            code data
                            span &nbsp; string - The Data of the paint (base64 encoded
                        li 
                            code belongsTo
                            span &nbsp; ObjectId - The id of the user that the paint belongs to
                        li 
                            code isShared
                            span &nbsp; boolean - Whether the paint is shared or not
             
                
            