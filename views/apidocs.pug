doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(name="description", content="The API Documentation for Shareable Paint App")
        link(rel="stylesheet", href="/css/docs.css")
        title API Documentation
    body 
        .wrapper 
            span.heading API Documentation for /api/paint

            .cardsContainer 
                .card 
                    .cardHeader 
                        span.method.get GET
                        span.endPoint /preview/paints
                    span.response Response
                    ul 
                        li 
                            code paints array
                        li 
                            code 200
                
                .card 
                    .cardHeader 
                        span.method.post POST
                        span.endPoint /edit/title
                    span.payload Payload 
                    ul  
                        li 
                            code paintId
                        li 
                            code userId
                        li 
                            code title
                    span.response Response
                    ul 
                        li 
                            code 204
                
                .card 
                    .cardHeader 
                        span.method.post POST
                        span.endPoint /edit/save
                    span.payload Payload 
                    ul  
                        li 
                            code paintId
                        li 
                            code userId
                        li 
                            code data
                    span.response Response
                    ul 
                        li 
                            code 204
                
                .card 
                    .cardHeader 
                        span.method.put PUT
                        span.endPoint /save
                    span.payload Payload 
                    ul  
                        li 
                            code paintId
                        li 
                            code data
                    span.response Response
                    ul 
                        li 
                            code 204
                
                .card 
                    .cardHeader 
                        span.method.delete DELETE
                        span.endPoint /delete
                    span.payload Payload 
                    ul  
                        li 
                            code paintId
                    span.response Response
                    ul 
                        li 
                            code 204
            